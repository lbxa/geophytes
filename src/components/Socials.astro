---
import { Icon } from "astro-icon/components";
import { Picture } from "astro:assets";

import Gab from "@/assets/dp/gab.jpeg";
import Tully from "@/assets/dp/tully.jpeg";
---

<section class="flex flex-col gap-sm mx-auto">
  <h1 class="text-center">Get in Touch</h1>
  <div class="flex flex-col md:flex-row gap-3xl">
    <div class="flex flex-col gap-lg items-center">
      <Picture
        src={Gab}
        alt="Gabriella Martins Cardoso"
        width={200}
        height={200}
        decoding="async"
        loading="eager"
        class="rounded-full"
      />
      <a
        class="flex gap-sm no-underline"
        href="https://linkedin.com/in/gabriella-martins-cardoso/"
        target="_blank"
      >
        <Icon name="linkedin" class="h-xl dark:fill-ivory fill-shark-950" />
        <span>Gabriella Martins Cardoso</span>
      </a>
      <p>Executive Director</p>
    </div>
    <div class="flex flex-col gap-lg items-center">
      <Picture
        src={Tully}
        alt="Tully O'Regan"
        width={200}
        height={200}
        decoding="async"
        loading="eager"
        class="rounded-full"
      />
      <a
        class="flex gap-sm no-underline"
        href="https://www.linkedin.com/in/tullyoregan/"
        target="_blank"
      >
        <Icon name="linkedin" class="h-xl dark:fill-ivory fill-shark-950" />
        <span>Tully O'Regan</span>
      </a>
      <p>Executive Director</p>
    </div>
  </div>
</section>
